<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/nine_text"
        android:layout_marginRight="@dimen/margin_big"
        android:layout_marginTop="@dimen/zero_dp"
        android:layout_marginBottom="@dimen/zero_dp"
        android:id="@+id/tvDialogDateTime"
        android:gravity="right"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/nine_text"
        android:layout_marginRight="@dimen/margin_big"
        android:layout_marginTop="@dimen/zero_dp"
        android:layout_marginBottom="@dimen/zero_dp"
        android:id="@+id/tvLocationLatLng"
        android:gravity="right"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/zero_dp"
            android:layout_weight="@integer/one"
            android:layout_height="wrap_content"
            android:id="@+id/ivDialogPrevious"
            android:visibility="gone"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            />

        <ImageView
            android:layout_width="@dimen/one_nine"
            android:layout_height="@dimen/one_nine"
            android:id="@+id/ivDialogPreview"
            android:visibility="gone"
            />

        <ImageView
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/one"
            android:id="@+id/ivDialogNext"
            android:visibility="gone"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            />
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDialogPreview"
        android:textSize="@dimen/nine_text"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvOrientation"
        android:textSize="@dimen/nine_text"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDialogText"
        android:layout_marginLeft="@dimen/margin_left"/>

</LinearLayout>